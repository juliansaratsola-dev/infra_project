# Production Environment Configuration

environment = "prod"
aws_region  = "us-east-1"
project_name = "vet-infra"

# Network
vpc_cidr             = "10.1.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b", "us-east-1c"]
public_subnet_cidrs  = ["10.1.1.0/24", "10.1.2.0/24", "10.1.3.0/24"]
private_subnet_cidrs = ["10.1.10.0/24", "10.1.11.0/24", "10.1.12.0/24"]

# Compute - HA setup for production
rke2_server_count    = 3
rke2_agent_count     = 3
instance_type_server = "t3.large"
instance_type_agent  = "t3.large"

# Security
allowed_ssh_cidr = "10.0.0.0/8"  # Restrict to corporate network

# RKE2
rancher_version = "2.7.9"

# Note: Set these via environment variables or terraform.tfvars.secret
# key_name = "your-ssh-key"
# rke2_cluster_token = "your-secure-token"
